line-scale()
  content: ''
  position: absolute
  z-index: 1
  left: 0
  top: 0
  width: 100%
  height: 1px
  background-color: #dedede
  -webkit-transform: scaleY(.5)
  transform: scaleY(.5)

// 不换行
no-wrap()
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:after
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px